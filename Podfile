platform :ios, '11.4'

target 'LibraryIntegrations' do
  use_frameworks!
  
  # Networking
  pod 'Hyperspace'
  
  # Keyboard Management
  pod 'KeyboardSupport'
  
  # Login Sessions
  pod 'SessionTools'
  
  # Universal/Deep Linking
  pod 'Scotty'
  
  # Utility Functions/Extensions
  pod 'UtiliKit'

  target 'LibraryIntegrationsTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
